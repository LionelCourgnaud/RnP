        <div class="form-group">
            <label for="classes">Classe(s)</label>
            <div id="system.classes">
                {{#each config.classeTypes as |name val|}}
                    <!-- {{this}} -->
                    {{#if (inside ../system.classes val)}}
                        <input class="form-check-input" type="checkbox" name="system.classes" id="{{name}}" value="{{val}}" checked>  
                    {{else}}
